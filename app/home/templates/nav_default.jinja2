{% extends "nav_layout.jinja2" %}
{% block nav %}
<div class="text-right" id="default">
    <a class="link-gray {% if request.path == '/' %}current{% endif %}"
        href="/">
        Home
    </a>

    <a class="link-gray {% if request.path == '/about' %}current{% endif %}"
        href="/about">
        About
    </a>

    <a class="link-gray {% if request.path == '/projects' %}current{% endif %}"
        href="/projects">
        Projects
    </a>
    {% if current_user.is_authenticated %}
        <a class="link-gray"
            hx-get="/navbar_layout?layout=account&current={{ request.path }}"
            hx-target="#links"
            hx-swap="innerHTML">
            Account
        </a>
    {% endif %}
</div>
{% endblock %}

